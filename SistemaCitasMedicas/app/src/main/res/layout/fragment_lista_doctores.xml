<?xml version="1.0" encoding="utf-8"?>
<!-- ESTILOS APLICADOS: HeaderPantalla, TextoTituloPantalla, CampoTexto, TextoSecundario, TextoCuerpo -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <!-- Header - Usa estilo HeaderPantalla -->
    <LinearLayout
        style="@style/HeaderPantalla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_doctor"
            android:contentDescription="Doctores"
            app:tint="@color/colorWhite" />

        <!-- Título - Usa estilo TextoTituloPantalla -->
        <TextView
            style="@style/TextoTituloPantalla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lista de Doctores"
            android:textSize="20sp"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- Campo de búsqueda - Usa estilo CampoTexto -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/CampoTexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:startIconDrawable="@drawable/ic_buscar"
        app:startIconTint="@color/colorPrimary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etBuscarDoctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buscar doctor..."
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Contador - Usa estilo TextoSecundario -->
    <TextView
        style="@style/TextoSecundario"
        android:id="@+id/tvContadorDoctores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: 0 doctores"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDoctores"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- Mensaje vacío - Usa estilo TextoCuerpo -->
    <TextView
        style="@style/TextoCuerpo"
        android:id="@+id/tvSinDoctores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="No hay doctores registrados"
        android:textSize="16sp"
        android:visibility="gone" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAgregarDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:src="@drawable/ic_agregar"
        app:backgroundTint="@color/colorPrimary"
        app:tint="@color/colorWhite"
        android:contentDescription="Agregar doctor" />

</LinearLayout>