<?xml version="1.0" encoding="utf-8"?>
<!-- ESTILOS APLICADOS: TextoTituloPantalla, CampoTexto, BotonPrimario, BotonSecundario -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_paciente"
            android:contentDescription="Icono paciente" />

        <!-- Título - Usa estilo TextoTituloPantalla + color primario -->
        <TextView
            style="@style/TextoTituloPantalla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Registro de Paciente"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp" />

        <!-- Campo nombre - Usa estilo CampoTexto -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/CampoTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNombrePaciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre completo"
                android:inputType="textPersonName"
                android:drawableStart="@drawable/ic_persona"
                android:drawablePadding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo DNI - Usa estilo CampoTexto -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/CampoTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDniPaciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DNI"
                android:inputType="number"
                android:maxLength="8"
                android:drawableStart="@drawable/ic_dni"
                android:drawablePadding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo teléfono - Usa estilo CampoTexto -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/CampoTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTelefonoPaciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Teléfono"
                android:inputType="phone"
                android:maxLength="9"
                android:drawableStart="@drawable/ic_telefono"
                android:drawablePadding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo email - Usa estilo CampoTexto -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/CampoTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmailPaciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo electrónico"
                android:inputType="textEmailAddress"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo dirección - Usa estilo CampoTexto -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/CampoTexto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDireccionPaciente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dirección"
                android:inputType="textPostalAddress"
                android:drawableStart="@drawable/ic_ubicacion"
                android:drawablePadding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botones - Usan estilos BotonPrimario y BotonSecundario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <com.google.android.material.button.MaterialButton
                style="@style/BotonPrimario"
                android:id="@+id/btnGuardarPaciente"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Guardar"
                android:layout_marginEnd="8dp"
                app:icon="@drawable/ic_guardar"
                app:iconGravity="textStart" />

            <com.google.android.material.button.MaterialButton
                style="@style/BotonSecundario"
                android:id="@+id/btnLimpiarPaciente"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Limpiar"
                app:icon="@drawable/ic_limpiar"
                app:iconGravity="textStart"
                app:iconTint="@color/colorPrimary" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>