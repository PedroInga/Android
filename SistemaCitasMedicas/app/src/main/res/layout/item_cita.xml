<?xml version="1.0" encoding="utf-8"?>
<!-- ESTILOS APLICADOS: CardEstandar, TextoSubtitulo, TextoSecundario, BadgeEstado -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardEstandar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:strokeColor="@color/colorCardCita"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_cita"
                android:background="@drawable/bg_circle_primary"
                android:padding="10dp"
                app:tint="@color/colorWhite"
                android:contentDescription="Cita" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <!-- Paciente - Usa estilo TextoSubtitulo -->
                <TextView
                    style="@style/TextoSubtitulo"
                    android:id="@+id/tvPacienteCita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paciente"
                    android:textSize="15sp"
                    android:textColor="@color/colorTextPrimary" />

                <!-- Doctor - Usa estilo TextoSecundario + color primario -->
                <TextView
                    style="@style/TextoSecundario"
                    android:id="@+id/tvDoctorCita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Doctor"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Estado - Usa estilo BadgeEstado -->
            <TextView
                style="@style/BadgeEstado"
                android:id="@+id/tvEstadoCita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendiente"
                android:background="@drawable/bg_estado_pendiente" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorSuccess"
            android:layout_marginVertical="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_calendario"
                    app:tint="@color/colorTextSecondary"
                    android:contentDescription="Fecha" />

                <!-- Fecha - Usa estilo TextoSecundario -->
                <TextView
                    style="@style/TextoSecundario"
                    android:id="@+id/tvFechaCita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/01/2026"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_reloj"
                    app:tint="@color/colorTextSecondary"
                    android:contentDescription="Hora" />

                <!-- Hora - Usa estilo TextoSecundario -->
                <TextView
                    style="@style/TextoSecundario"
                    android:id="@+id/tvHoraCita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnVerCita"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_ver"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Ver detalle"
                    app:tint="@color/colorPrimary" />

                <ImageButton
                    android:id="@+id/btnEditarCita"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_editar"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Editar"
                    app:tint="@color/colorPrimary"
                    android:layout_marginStart="8dp" />

                <ImageButton
                    android:id="@+id/btnEliminarCita"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_eliminar"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Eliminar"
                    app:tint="@color/colorDanger"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>