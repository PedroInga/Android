<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ===== ESTILOS DE TEXTO ===== -->

    <!-- Título principal de pantalla -->
    <style name="TextoTituloPantalla">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- Subtítulo de sección -->
    <style name="TextoSubtitulo">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- Texto normal del cuerpo -->
    <style name="TextoCuerpo">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <!-- Texto secundario (descripciones, hints) -->
    <style name="TextoSecundario">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <!-- Texto grande para contadores/estadísticas -->
    <style name="TextoContador">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- ===== ESTILOS DE BOTONES ===== -->

    <!-- Botón primario (azul) -->
    <style name="BotonPrimario" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <!-- Botón secundario (outlined) -->
    <style name="BotonSecundario" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">12dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <!-- Botón de peligro (rojo) -->
    <style name="BotonPeligro" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorDanger</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <!-- ===== ESTILOS DE CARDS ===== -->

    <!-- Card estándar del sistema -->
    <style name="CardEstandar" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">3dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- ===== ESTILOS DE INPUTS ===== -->

    <!-- Campo de texto estándar -->
    <style name="CampoTexto" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
    </style>

    <!-- ===== ESTILOS DE HEADERS ===== -->

    <!-- Header azul de pantalla -->
    <style name="HeaderPantalla">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- ===== ESTILOS DE BADGES DE ESTADO ===== -->

    <!-- Badge base para estados -->
    <style name="BadgeEstado">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>

    <!-- Estilo para botones de acción peligrosa (eliminar) -->
    <style name="BotonDanger" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorDanger</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- Texto muy grande para métricas principales -->
    <style name="TextoNumeroGrande">
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorSuccess</item>
    </style>
</resources>